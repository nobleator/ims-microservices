@page "{id:int}"
@model ClientModel
@{
    ViewData["Title"] = "Client";
}
@section Scripts
{
  
}

<div class="text-center container">
    <form method="post">
        <div class="row d-flex">
            <a class="btn btn-secondary mr-auto p-2" asp-area="" asp-page="/Clients/Index">Back</a>
            <button id="deleteItem" class="btn btn-danger p-2">
                Delete
            </button>
            <input type="submit" class="btn btn-success p-2" value="Save and Submit" />
        </div>

        <input type="hidden" asp-for="@Model.Client.ClientId" class="col-sm-10 form-control" value="@Model.Client.ClientId">

        <div class="row">
            <div class="col-sm-4 text-right">
                <label asp-for="@Model.Client.Name">Name</label>
            </div>
            <div class="col-sm-6">
                <input asp-for="@Model.Client.Name" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-right">
                <label asp-for="@Model.Client.Description">Description</label>
            </div>
            <div class="col-sm-6">
                <input asp-for="@Model.Client.Description" class="form-control" />
            </div>
        </div>
    </form>
</div>
