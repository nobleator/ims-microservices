@page "{id:int}"
@model ProductModel
@{
    ViewData["Title"] = "Product";
}
@section Scripts
{
  
}

<div class="text-center container">
    <form method="post">
        <div class="row d-flex">
            <a class="btn btn-secondary mr-auto p-2" asp-area="" asp-page="/Products/Index">Back</a>
            <button id="deleteItem" class="btn btn-danger p-2">
                Delete
            </button>
            <input type="submit" class="btn btn-success p-2" value="Save and Submit" />
        </div>

        <input type="hidden" asp-for="@Model.Product.ProductId" class="col-sm-10 form-control" value="@Model.Product.ProductId">

        <div class="row">
            <div class="col-sm-4 text-right">
                <label asp-for="@Model.Product.Name">Name</label>
            </div>
            <div class="col-sm-6">
                <input asp-for="@Model.Product.Name" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-right">
                <label asp-for="@Model.Product.Description">Description</label>
            </div>
            <div class="col-sm-6">
                <input asp-for="@Model.Product.Description" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-right">
                <label asp-for="@Model.Product.AvgPurchasePrice">Avg Purchase Price</label>
            </div>
            <div class="col-sm-6">
                <input readonly asp-for="@Model.Product.AvgPurchasePrice" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-right">
                <label asp-for="@Model.Product.AvgSalePrice">Avg Sale Price</label>
            </div>
            <div class="col-sm-6">
                <input readonly asp-for="@Model.Product.AvgSalePrice" class="form-control" />
            </div>
        </div>
    </form>
</div>
